# Generic Variables
aws_profile = "default"
aws_region = "us-east-1"
environment = "dev"
owner = "admin@email.com"
business_divsion = "rnd"

# AWS VPC Variables
vpc_name = "vpc"
vpc_cidr_block = "10.0.0.0/16"
vpc_availability_zones = ["us-east-1a", "us-east-1b"]
vpc_public_subnets = ["10.0.101.0/24", "10.0.102.0/24"]
vpc_private_subnets = ["10.0.1.0/24", "10.0.2.0/24"]
vpc_database_subnets= ["10.0.151.0/24", "10.0.152.0/24"]
vpc_create_database_subnet_group = true 
vpc_create_database_subnet_route_table = true
vpc_enable_nat_gateway = true  
vpc_single_nat_gateway = true

# AWS EC2 Instance Variables
bastion_instance_type = "t2.micro"
private_instance_type = "t3.micro"
instance_keypair = "terraform-key"

# AWS ACM Variables
subject_alternative_names = ["*.domain.com"]

# Route 53 Variables
route53_mydomain = "domain.com"
route53_webapps_dns = "cloudwatch.domain.com"

# Autoscaling Variables
asg_sns_topic_subscription_email = "example@gmail.com"